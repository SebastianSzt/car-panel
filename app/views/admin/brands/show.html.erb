<!-- app/views/admin/brands/show.html.erb -->
<h1><%= @brand.name %></h1>

<h2>Models</h2>
<%= link_to 'Add New Model', new_admin_brand_model_path(brand_id: @brand.id), class: 'btn btn-primary mb-3' %>

<% if @models.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @models.each do |model| %>
        <tr>
          <td><%= model.name %></td>
          <td><%= link_to 'Show', admin_brand_model_path(model.brand, model), class: 'btn btn-info' %></td>
          <td><%= link_to 'Edit', edit_admin_brand_model_path(model.brand, model), class: 'btn btn-warning' %></td>
          <td><%= button_to 'Destroy', admin_brand_model_path(model.brand, model), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @models %>
<% else %>
  <p>No models found.</p>
<% end %>

<%= link_to 'Edit Brand', edit_admin_brand_path(@brand), class: 'btn btn-warning' %>
<%= link_to 'Back', admin_brands_path, class: 'btn btn-secondary' %>