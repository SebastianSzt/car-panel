<!-- app/views/admin/brands/index.html.erb -->
<h1>Brands</h1>

<%= link_to 'New Brand', new_admin_brand_path, class: 'btn btn-primary mb-3' %>
<%= link_to 'Import Data', '#', class: 'btn btn-secondary mb-3' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', admin_brand_path(brand), class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_admin_brand_path(brand), class: 'btn btn-warning' %></td>
        <td><%= button_to 'Destroy', admin_brand_path(brand), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @brands %>