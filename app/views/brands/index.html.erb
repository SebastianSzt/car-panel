<p style="color: green"><%= notice %></p>

<% content_for :title, "Brands" %>

<h1>Listing Brands</h1>

<div id="brands">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @brands.each do |brand| %>
        <%= render brand %>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New Brand', new_brand_path %>

<%= paginate @brands %>
