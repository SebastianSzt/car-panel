<p style="color: green"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @brand.name %>
</p>

<h2>Models</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
    </tr>
  </thead>

  <tbody>
    <% @brand.models.each do |model| %>
      <tr>
        <td><%= model.name %></td>
        <td><%= model.year %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_brand_path(@brand) %> |
<%= link_to 'Back', brands_path %>
